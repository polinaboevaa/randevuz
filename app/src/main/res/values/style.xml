<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/custom_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="GoalButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#F46174</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="InfoCard" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawableTint">@color/primary</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
